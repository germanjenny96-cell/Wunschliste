<body>
  <div class="container">
    <h1>üéÑ Wunschliste Weihnachten üéÅ</h1>

    <label for="name">Name</label>
    <input id="name" type="text" placeholder="z.‚ÄØB. Lina">

    <div class="section">
      <label>W√ºnsche</label>
      <div id="wishes" class="wish-list">
        <div class="wish-item">
          <input type="text" placeholder="Mein Wunsch">
        </div>
      </div>
      <button id="addWishBtn" class="secondary">+ weiteren Wunsch hinzuf√ºgen</button>
    </div>

    <label for="why">Warum ich mir das w√ºnsche</label>
    <textarea id="why" placeholder="Kurz warum"></textarea>

    <label for="when">Wann ich‚Äôs gern h√§tte</label>
    <input id="when" type="text" placeholder="z.‚ÄØB. bis 24.12.2025 oder offen">

    <label for="prio">Priorit√§t</label>
    <select id="prio">
      <option value="keine">keine</option>
      <option value="nice-to-have">Nice to have</option>
      <option value="wichtig">Wichtig</option>
    </select>

    <label for="note">Extra Notiz (optional)</label>
    <textarea id="note" placeholder="z.‚ÄØB. Gr√∂√üe, Farbe, Allergien, etc."></textarea>

    <button id="submitBtn">Absenden</button>

    <div class="submitted-list" id="submittedList" style="display:none;">
      <h2>Deine eingereichten W√ºnsche</h2>
      <ul id="listItems"></ul>
    </div>
  </div>

  <script>
    const addWishBtn = document.getElementById('addWishBtn');
    const wishesContainer = document.getElementById('wishes');
    const submitBtn = document.getElementById('submitBtn');
    const submittedListDiv = document.getElementById('submittedList');
    const listItemsUl = document.getElementById('listItems');

    addWishBtn.addEventListener('click', () => {
      const div = document.createElement('div');
      div.className = 'wish-item';
      const inp = document.createElement('input');
      inp.type = 'text';
      inp.placeholder = 'Mein Wunsch';
      div.appendChild(inp);
      wishesContainer.appendChild(div);
    });

    submitBtn.addEventListener('click', () => {
      const name = document.getElementById('name').value.trim();
      const why = document.getElementById('why').value.trim();
      const when = document.getElementById('when').value.trim();
      const prio = document.getElementById('prio').value;
      const note = document.getElementById('note').value.trim();
      const wishInputs = wishesContainer.querySelectorAll('input');
      const wishes = Array.from(wishInputs).map(i => i.value.trim()).filter(v => v);

      if (!name || wishes.length === 0) {
        alert('Bitte trage deinen Namen und mindestens einen Wunsch ein.');
        return;
      }

      // Anzeige der W√ºnsche unten auf der Seite
      listItemsUl.innerHTML = '';
      wishes.forEach((w, i) => {
        const li = document.createElement('li');
        li.textContent = `Wunsch ${i+1}: ${w}`;
        listItemsUl.appendChild(li);
      });
      const extraLi = document.createElement('li');
      extraLi.textContent = `Warum: ${why}`;
      listItemsUl.appendChild(extraLi);
      const extraLi2 = document.createElement('li');
      extraLi2.textContent = `Wann: ${when}`;
      listItemsUl.appendChild(extraLi2);
      const extraLi3 = document.createElement('li');
      extraLi3.textContent = `Priorit√§t: ${prio}`;
      listItemsUl.appendChild(extraLi3);
      if (note) {
        const extraLi4 = document.createElement('li');
        extraLi4.textContent = `Extra Notiz: ${note}`;
        listItemsUl.appendChild(extraLi4);
      }

      submittedListDiv.style.display = 'block';

      // TODO: Hier k√∂nnten wir die Daten an Google Sheet schicken

    });
  </script>
</body>
